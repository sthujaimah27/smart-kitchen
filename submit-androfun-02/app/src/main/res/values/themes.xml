<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidMobileSub02" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dicoding_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CardItem">
        <item name="android:background">@color/white</item>
    </style>

    <style name="HeadlineMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
    </style>

    <style name="HeadlineMedium.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="BodyMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BodyMedium.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BodyMedium.Gray">
        <item name="android:textColor">@color/dicoding_color</item>
    </style>

    <style name="TitleMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="itemSide">
        <item name="android:background">@color/white</item>
    </style>

    <style name="shapeAppreaceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="textColor" parent="">
        <item name="android:textColor">@color/dicoding_color</item>
    </style>

    <style name="quotaIcon">
        <item name="android:src">@drawable/baseline_supervisor_account_24_dicoding</item>
    </style>

    <style name="backgroundDetailButton">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/color_selectoer_item_day</item>
        <item name="itemTextColor">@color/color_selectoer_item_day</item>
    </style>
    <style name="ThemeOverlay.AndroidMobileSub02.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>